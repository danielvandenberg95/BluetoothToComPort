<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gmail.dvandenberg95.bluetoothtopc">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.gmail.dvandenberg95.bluetoothtopc.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.gmail.dvandenberg95.bluetoothtopc.service.bluetoothdeviceselection.DeviceSelector"
            android:theme="@style/DialogTheme"
            android:excludeFromRecents="true"/>
        <service android:name="com.gmail.dvandenberg95.bluetoothtopc.service.BluetoothService"
            android:exported="true"
            tools:ignore="ExportedService">
        </service>
        <activity android:name="com.gmail.dvandenberg95.bluetoothtopc.ShareActivity"
            android:theme="@style/Invisible"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>
    </application>

</manifest>